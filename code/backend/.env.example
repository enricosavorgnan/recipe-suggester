# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Options: local | docker | production
# - local: Local development (services on localhost)
# - docker: Docker Compose deployment (services use container names)
# - production: Production deployment
ENVIRONMENT=local

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=Recipe Suggester API
DEBUG=True
API_VERSION=0.1.0

# ===========================================
# DATABASE SETTINGS
# ===========================================
# For ENVIRONMENT=local: use localhost
# For ENVIRONMENT=docker: use postgres (Docker service name)
# For ENVIRONMENT=production: use your cloud database host
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recipe_suggester

# ===========================================
# CORS SETTINGS
# ===========================================
# Frontend URL for CORS configuration
# For ENVIRONMENT=local: http://localhost:3000
# For ENVIRONMENT=docker: http://localhost:3000
# For ENVIRONMENT=production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# ==================================
# API SETTINGS
# ===========================================
# Backend API URL (used for OAuth callbacks, webhooks, etc.)
# For ENVIRONMENT=local: http://localhost:8000
# For ENVIRONMENT=docker: http://localhost:8000
# For ENVIRONMENT=production: https://api.yourdomain.com
API_URL=http://localhost:8000
