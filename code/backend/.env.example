# APPLICATION SETTINGS
APP_NAME=Recipe Suggester API
DEBUG=True
API_VERSION=0.1.0

# DATABASE SETTINGS
# Local dev: use localhost
# Docker compose: we override POSTGRES_SERVER=postgres in docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recipe_suggester

# CORS SETTINGS
# Frontend URL - primary allowed origin
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated, optional)
# Example: ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# API SETTINGS
# Backend API URL (used for OAuth callbacks, webhooks, etc.)
API_URL=http://localhost:8000

# AUTHENTICATION SETTINGS
# Secret key for JWT tokens (must be changed when deploying)
# To be generated using the command: openssl rand -hex 32
SECRET_KEY=example
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180

# GOOGLE OAUTH SETTINGS
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OPENAI SETTINGS
# OpenAI API Key for recipe generation
OPENAI_API_KEY=
# OpenAI model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# MODELS SERVICE SETTINGS
# URL of the models service for ingredient detection
MODELS_SERVICE_URL=http://localhost:8001
