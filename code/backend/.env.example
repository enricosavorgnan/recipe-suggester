# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=Recipe Suggester API
DEBUG=True
API_VERSION=0.1.0

# ===========================================
# DATABASE SETTINGS
# ===========================================
# Local dev: use localhost
# Docker compose: override POSTGRES_SERVER=postgres in docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recipe_suggester

# ===========================================
# CORS SETTINGS
# ===========================================
# Frontend URL - primary allowed origin
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated, optional)
# Example: ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# ===========================================
# API SETTINGS
# ===========================================
# Backend API URL (used for OAuth callbacks, webhooks, etc.)
API_URL=http://localhost:8000
